<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="4dp">

    <ImageView
        android:id="@+id/image_bot_avatar"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@drawable/blue_circle_bg"
        android:padding="6dp"
        android:src="@drawable/ic_robot_chatbot"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#FFFFFF"
        android:contentDescription="Bot Avatar" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:background="@drawable/bubble_ai"
        android:maxWidth="280dp"
        android:paddingStart="16dp"
        android:paddingTop="8dp"
        android:paddingEnd="16dp"
        android:paddingBottom="8dp"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/image_bot_avatar"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hello! I am your AI medical assistant. Please remember I am not a doctor." />

</androidx.constraintlayout.widget.ConstraintLayout>