<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="DoctorLogin.DoctorHome">

    <!-- HEADER -->
    <RelativeLayout
        android:id="@+id/hyd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#183E9F"
        android:paddingTop="35dp"
        android:paddingBottom="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/texthope"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patients in Queue"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <!-- COUNT CARD -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintTop_toBottomOf="@id/hyd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="12dp"
            android:gravity="center"
            android:weightSum="2">

            <!-- COUNT BLOCK -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Patient Number"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/btnMinus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/pill_white"
                        android:gravity="center"
                        android:text="âˆ’"
                        android:textSize="26sp"
                        android:textColor="#294686"/>

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="50dp"
                        android:layout_height="40dp"
                        android:background="@drawable/pill_blue"
                        android:gravity="center"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginHorizontal="5dp"/>

                    <TextView
                        android:id="@+id/btnPlus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/pill_white"
                        android:gravity="center"
                        android:text="+"
                        android:textSize="26sp"
                        android:textColor="#294686"/>
                </LinearLayout>
            </LinearLayout>

            <!-- PER PATIENT TIME -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Per Patient"
                    android:textColor="#222222"
                    android:textStyle="bold"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvPerPatientTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06 min"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingTop="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- PATIENT DETAILS CARD -->
    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:layout_constraintTop_toBottomOf="@id/list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Details"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#183E9F"/>

            <TextView
                android:id="@+id/appointment_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Appointment no : "
                android:textSize="12sp"
                android:textStyle="bold"
                android:gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="6dp">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="86dp"
                    android:layout_height="86dp"
                    android:src="@drawable/img_9"
                    android:background="@drawable/rounded_corner_bg"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Patient Name"
                        android:textStyle="bold"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/phonenumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone Number"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/gender"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textSize="12sp"
                        android:textColor="#007BFF"/>

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Address:"
                        android:textSize="12sp"
                        android:textColor="#007BFF"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Confirm"
                    android:backgroundTint="#183E9F"
                    android:textColor="#FFFFFF"
                    android:layout_marginEnd="16dp"/>

                <Button
                    android:id="@+id/waiting"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Waiting"
                    android:backgroundTint="#183E9F"
                    android:textColor="#FFFFFF"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- TABS -->
    <LinearLayout
        android:id="@+id/fixed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/upcoming_patients"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Upcoming Patients"
            android:backgroundTint="#183E9F"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="12dp"/>

        <Button
            android:id="@+id/waitinglist"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:text="Waiting List"
            android:backgroundTint="#183E9F"
            android:textColor="#FFFFFF"/>
    </LinearLayout>

    <!-- RECYCLER VIEW -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/fixed"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
