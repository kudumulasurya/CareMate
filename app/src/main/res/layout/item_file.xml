<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <!-- Main Container -->
    <LinearLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <!-- Card-like Hospital Info Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="#FFFFFF"
            android:orientation="horizontal"
            android:padding="12dp"
            android:elevation="4dp"

            app:cardCornerRadius="16dp" >

            <!-- Doctor Image -->
            <ImageView
                android:id="@+id/doctorimg"
                android:layout_width="67dp"
                android:layout_height="67dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="15dp"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />

            <!-- Hospital & Doctor Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <TextView
                    android:id="@+id/hospital"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dr_devaraj_eye_hospital"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctorname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dr_devaraj_m"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctordetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_specialization"
                    android:textColor="#6D6D6D"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/doctor_rating"
                    android:textColor="#FF5733"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="@string/consultation_fees"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <!-- Booking Button -->
                <Button
                    android:id="@+id/book1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="#183E9F"
                    android:text="@string/book_clinic_visit"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:elevation="4dp"
                    app:cardCornerRadius="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
